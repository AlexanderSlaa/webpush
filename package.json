{
  "name": "webpush",
  "version": "0.0.1",
  "description": "A dependency-free Web Push implementation for Node.js",
  "main": "./dist/index.es.js",
  "module": "./dist/index.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.es.js",
      "require": "./dist/index.cjs.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "tsx examples/index.ts",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "docs:build": "typedoc src/index.ts --out generated/docs --name \"webpush ðŸ””\" --theme default --excludePrivate --excludeProtected"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AlexanderSlaa/webpush.git"
  },
  "keywords": [
    "webpush",
    "web-push",
    "webpush-notifications",
    "gcm",
    "rfc8188",
    "rfc8291",
    "rfc8292"
  ],
  "author": "Alexander Slaa",
  "license": "Apache-2.0",
  "type": "module",
  "bugs": {
    "url": "https://github.com/AlexanderSlaa/webpush/issues"
  },
  "homepage": "https://alexanderslaa.github.io/webpush/",
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^13.1.3",
    "@semantic-release/release-notes-generator": "^14.1.0",
    "@types/node": "^24.3.0",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "tsx": "^4.20.4",
    "typescript": "^5.9.3",
    "vite": "^7.3.0",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^4.0.16",
    "typedoc": "^0.28.15"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json",
            "CHANGELOG.md"
          ],
          "message": "webpush(release): ðŸš€ ${nextRelease.version} \n\n${nextRelease.notes}"
        }
      ]
    ]
  }
}
